<?php
function AddGoogleMap($content) {
	if (is_single()) {
		global $post;
		$latlng = get_post_meta($post->ID, 'Lat_Long', true);
		if ( !empty($latlng) ) {
			$width = '90%';
			$height= '200px';
			list($lat,$long) = split(',', $latlng);
			$content .= '<p>'
				. "[googlemap lat=\"{$lat}\" lng=\"{$long}\" zoom=\"13\" width=\"{$width}\" height=\"{$height}\" type=\"G_NORMAL_MAP\"]{$lat},{$long}[/googlemap]"
				. '</p>';
		}
	}
	return $content;
}
add_filter('the_content', 'AddGoogleMap', 5);
?>
